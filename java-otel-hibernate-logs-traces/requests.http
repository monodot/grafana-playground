### Get all customers
# curl http://localhost:8080/api/customers
GET http://localhost:8081/api/customers

### Create a customer
# curl -X POST http://localhost:8080/api/customers
#  -d "name=Bob Smith&email=bob@example.com"
POST http://localhost:8080/api/customers
Content-Type: application/x-www-form-urlencoded

name = {{$random.name.fullName}} &
email = {{$random.email}}

### POST create 25 customers
# curl -X POST http://localhost:8080/api/customers/bulk
#  -d "count=25"
POST http://localhost:8080/api/customers/bulk
Content-Type: application/x-www-form-urlencoded

count = 100
